<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification" id="notice_wrapper">
        <p class="notice"><%= notice %></p>
      </div>
    <% elsif flash[:alert] %>
      <div class="notification is-danger global-notification" id="notice_alert">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-dark">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do%>
          <h1 class="title is-5 has-text-white">Private Events</h1>
        <% end %>
        <div class="navbar-burger burger" data-targer="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div id="navbarExample" class="navbar-menu mr-5 mt-2">
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control">
              <%= link_to 'Create New Event', new_event_path, class:"button is-white"%>
            </p>
            <% if user_signed_in? %>
              <p class="control">
                <%= link_to current_user.name, edit_user_registration_path, class:"button is-info"%>
              </p>
              <p class="control">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-danger"%>
              </p>
            <% else %>
              <p class="control">
                <%= link_to 'Sign In', new_user_session_path , class:"button is-info"%>
              </p>
              <p class="control">
                <%= link_to 'Sign Up', new_user_registration_path , class:"button is-success"%>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
