<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="field">
    <div class="control">
      <%= f.input :event, label: "New Event", input_html: { class: "textarea"}, wrapper: false, label_html: {
      class: "label"
    },placeholder: "Enter a new event description....", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :date, label: "Date & Time", input_html: { class: "select is-rounded"}, wrapper: false, label_html: {
      class: "label"
    } %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
